rules_version='2'


service cloud.firestore {
  match /databases/{database}/documents {

    // Kolekcija: items
    match /items/{itemId} {

      // ğŸ” ÄŒITANJE: svi logovani korisnici mogu Äitati sve dokumente
      allow read: if request.auth != null;

      // âœï¸ PISANJE: korisnik moÅ¾e pisati samo dokumente sa SVOJIM uid-om
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.uid;

      // âœï¸ UPDATE / DELETE: samo autor moÅ¾e izmeniti ili obrisati svoj dokument
      allow update, delete: if request.auth != null
                             && request.auth.uid == resource.data.uid;
    }
  }
}